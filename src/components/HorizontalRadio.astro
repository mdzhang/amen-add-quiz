---
export interface Props {
  options: string[];
  elementName: string;
}
const { options, elementName } = Astro.props as Props;
---

<ul class="items-center w-full text-sm font-medium text-gray-900 bg-white border border-gray-200 rounded-lg sm:flex dark:bg-gray-700 dark:border-gray-600 dark:text-white cursor-pointer">
    <li class="w-full border-b border-gray-200 sm:border-b-0 sm:border-r dark:border-gray-600">
      {options.map((option, idx) => (
         <div class="flex items-center ps-3">
            <input id={`horizontal-list-${option.replace(' ', '-')}`} checked={idx === 0 ? "checked": null} type="radio" value={option} name={elementName} class="w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-700 dark:focus:ring-offset-gray-700 focus:ring-2 dark:bg-gray-600 dark:border-gray-500 cursor-pointer">
            <label for={`horizontal-list-${option.replace(' ', '-')}`} class="w-full py-3 ms-2 text-sm font-medium text-gray-900 dark:text-gray-300 cursor-pointer">
              {option}
            </label>
        </div>
      ))}
    </li>
</ul>
